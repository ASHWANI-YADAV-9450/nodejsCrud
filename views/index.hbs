{{>header}}
    <title>CRUD APP | Home</title>
{{>navbar}}
<div class="container-fluid mt-2">
    <h5 class="background text-light text-center p-2">Employee Record</h5>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>Email Address</th>
                <th>Phone Number</th>
                <th>City</th>
                <th>State</th>
                <th></th>
                <th></th>
            </tr>
            {{#each data}}
             <tr>
                <th>{{_id}}</th>
                <th>{{name}}</th>
                <th>{{dsg}}</th>
                <th>{{salary}}</th>
                <th>{{email}}</th>
                <th>{{phone}}</th>
                <th>{{city}}</th>
                <th>{{state}}</th>
                <td><a href="update?_id={{_id}}"><i class="bi bi-pencil-fill"></i></a></td>
                <td><a href="delete/{{_id}}"><i class="bi bi-trash"></i></a></td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
{{>footer}}
    
